<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/txtTituloCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastro de Cliente"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/edtMatriculaCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Matrícula do Cliente"
        android:inputType="text"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"
        android:textColorHint="#666666" />

    <EditText
        android:id="@+id/edtNomeCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Cliente"
        android:inputType="textCapWords"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"
        android:textColorHint="#666666" />

    <EditText
        android:id="@+id/edtTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        android:inputType="phone"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:textColor="#000000"
        android:textColorHint="#666666" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Faixa etária:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/ageSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:padding="12dp" />

    <LinearLayout
        android:id="@+id/responsavelLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtTituloResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Responsável"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/edtCpfResponsavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CPF do Responsavel"
            android:inputType="number"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <EditText
            android:id="@+id/edtNomeResponsavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Responsável"
            android:inputType="textCapWords"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#666666" />

        <EditText
            android:id="@+id/edtTelefoneResponsavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="phone"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#000000"
            android:textColorHint="#666666" />

    </LinearLayout>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:layout_marginTop="24dp"
        android:textColor="#FFFFFF"
        android:background="#FF6200EE" />

</LinearLayout>