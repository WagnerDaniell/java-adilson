<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/rqvcmbh2k2ss"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rnqj56flje0s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/se6e6e6sw2"
                android:paddingVertical="3dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btnvoltar"
                    android:textColor="#4A4A4A"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="&lt;"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/rf5l3y69iko"
                android:textColor="#4A4A4A"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Cadastro de Produto"
                />

            <TextView
                android:id="@+id/r0ohsl6nyqzjq"
                android:textColor="#4A4A4A"
                android:textSize="12sp"
                android:layout_marginBottom="37dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Cadastre um novo produto no sistema"
                />

            <LinearLayout
                android:id="@+id/rqiz0vjsqiue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rwcz85m3hd3g"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Nome do Produto"
                    />
                <EditText
                    android:id="@+id/edtNomeProduto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:inputType="textCapWords"
                    android:autofillHints="name"
                    android:hint="Digite o nome do produto"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp"
                    android:background="@drawable/s7a7a7asw1cr10bffffff"
                    android:paddingVertical="12dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="26dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/riuvefqincs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rginlbtbbu9n"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Valor do Produto"
                    />
                <EditText
                    android:id="@+id/edtValorProduto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:inputType="numberDecimal"
                    android:autofillHints="creditCardNumber"
                    android:hint="Digite o valor do produto"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp"
                    android:background="@drawable/s7a7a7asw1cr10bffffff"
                    android:paddingVertical="12dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="26dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rbg88ibbwpzi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="370dp"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rqlyf6hmo1eh"
                    android:textColor="#4A4A4A"
                    android:textSize="14sp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Quantidade em Estoque"
                    />
                <EditText
                    android:id="@+id/edtEstoque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:inputType="number"
                    android:autofillHints="phone"
                    android:hint="Digite a quantidade em estoque"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp"
                    android:background="@drawable/s7a7a7asw1cr10bffffff"
                    android:paddingVertical="12dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="26dp" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="21dp"
                android:text="Cadastrar Produto"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:cornerRadius="20dp"
                app:backgroundTint="#FF3F56"
                style="@style/Widget.Material3.Button"
                android:insetTop="0dp"
                android:insetBottom="0dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>