<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscarClientes">

    <!-- Scroll principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Top bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FF3F56"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/btnvoltar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="98dp"
                    android:text="&lt;"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTituloClientes"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:text="Clientes"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingTop="16dp"
                    android:paddingBottom="389dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="351dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/search_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="13dp"
                        android:paddingVertical="11dp"
                        android:translationX="14dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@android:drawable/ic_menu_search"
                            android:tint="#7A7A7A"
                            android:layout_marginEnd="8dp"/>

                        <EditText
                            android:id="@+id/edtBuscaCliente"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Buscar Cliente"
                            android:inputType="text"
                            android:paddingVertical="1dp"
                            android:textColor="#7A7A7A"
                            android:textSize="14sp" />
                    </LinearLayout>



                    <!-- Lista de clientes -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvListaClientes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:overScrollMode="never" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/layoutDetalhesCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvNomeCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Cliente"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4A4A4A" />

        <TextView
            android:id="@+id/tvTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(xx) xxxxx-xxxx"
            android:textColor="#2D3748"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvMatricula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matrícula: 12345"
            android:textColor="#2D3748"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvResponsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responsável: Fulano de Tal"
            android:textColor="#2D3748"
            android:layout_marginTop="4dp" />

        <!-- Histórico -->
        <TextView
            android:id="@+id/tvHistoricoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Histórico de Compras"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:layout_marginTop="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHistoricoCompras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:overScrollMode="never"/>

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNovaVenda"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Nova venda"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#FF3F56"
                app:cornerRadius="16dp"
                app:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarCliente"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Editar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#FFCE6D"
                app:cornerRadius="16dp"
                app:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
