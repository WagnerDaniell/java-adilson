<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- HEADER -->
    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FF3F56"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/btnvoltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="98dp"
            android:text="&lt;"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTituloClientes"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text="Produtos"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- CAMPO DE BUSCA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_background"
        android:layout_margin="16dp"
        android:padding="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="#7A7A7A"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/edtBuscaProduto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar produto"
            android:background="@null"
            android:textColor="#2D3748"
            android:textSize="14sp"
            android:padding="0dp"/>
    </LinearLayout>

    <!-- LISTA DE PRODUTOS -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaProdutos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"/>

    <!-- DETALHES DO PRODUTO -->
    <LinearLayout
        android:id="@+id/layoutDetalhesProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2D3748"/>

        <TextView
            android:id="@+id/tvValorProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor: R$ 0,00"
            android:textColor="#2D3748"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvEstoqueProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estoque: 0"
            android:textColor="#2D3748"
            android:layout_marginTop="4dp"/>

        <!-- BotÃ£o Editar -->
        <TextView
            android:id="@+id/btnEditarProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/button_background"/>
    </LinearLayout>

</LinearLayout>
