<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E7EB"
    android:padding="32dp"
    tools:context=".BuscarProdutos">

    <!-- Título da tela -->
    <TextView
        android:id="@+id/tvTituloProdutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="Produtos"
        android:textColor="#2D3748"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo de busca -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutBuscaProduto"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloProdutos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtBuscaProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar produto"
            android:fontFamily="sans-serif-light"
            android:textColor="#2D3748"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Lista de produtos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListaProdutos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/inputLayoutBuscaProduto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutDetalhesProduto"/>

    <!-- Detalhes do produto selecionado -->
    <LinearLayout
        android:id="@+id/layoutDetalhesProduto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/tvValorProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor: R$ 0,00"
            android:textColor="#2D3748"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/tvEstoqueProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estoque: 0"
            android:textColor="#2D3748"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light" />

        <!-- Botões de ação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNovaVendaProduto"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Nova venda"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#38A169"
                app:cornerRadius="16dp"
                app:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarProduto"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Editar"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#2D3748"
                app:cornerRadius="16dp"
                app:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
